<% include ../partials/headUser %>
    <% include ../partials/navbarUser %>
    
        <div id="wrapper">

            <header id="header_clase"
                style="background: white url('<%= clase.image %>') no-repeat center center; background-size: cover; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover;">

                <div align="center">

                    <div id="div_clase_info">

                        <div class="card" style="width: 25rem;">
                            <div class="card-body text-card-black">
                                <h1 class="card-title">
                                    <%= clase.name %>
                                </h1>
                                <p></p>
                                <h6 class="card-subtitle mb-2"><i class="fa fa-globe"></i>&nbsp;&nbsp;<%= clase.language
                                        %>
                                </h6>
                                <h6 class="card-text"><i class="fa fa-calendar"></i>&nbsp;<%=
                                        clase.createdAt.toLocaleDateString() %>
                                </h6>
                                <p class="card-text"><i class="fa fa-user"></i>&nbsp;&nbsp;<%= clase.username %>
                                </p>
                            </div>
                        </div>

                    </div>

                </div>

            </header>

        </div>

        <section>

            <a class="btn btn-primary" style="float:right" href="/users/create_lesson?id=<%= clase._id %>">Crear
                lección</a>

            <h1>Lecciones</h1>

            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-published-tab" data-toggle="tab" href="#nav-published"
                        role="tab" aria-controls="nav-published" aria-selected="true">Publicadas</a>
                    <a class="nav-item nav-link" id="nav-drafts-tab" data-toggle="tab" href="#nav-drafts" role="tab"
                        aria-controls="nav-drafts" aria-selected="false">En borrador</a>
                </div>
            </nav>

            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-published" role="tabpanel"
                    aria-labelledby="nav-published-tab">

                    <br><br>
                    <div class="row">
                        <% if(publicadas.length> 0) { %>
                            <% publicadas.forEach(function(publicada) { %>

                                <div class="col-4">
                                    <div class="card text-white bg-primary mb-3" style="max-width: 246rem;">
                                        <div class="card-header">
                                            <div
                                                style="float: right; color: black; background: rgb(255, 255, 255); border-radius: 10%;">
                                                &nbsp;Publicada&nbsp;</div>
                                        </div>
                                        <a href="/users/lesson?id=<%= publicada._id %>"><img class="card-img-top"
                                                src="<%= publicada.image %>" alt="Card image cap"></a>
                                        <div class="card-body text-dark">
                                            <small style="float: right;"><i class="fa fa-calendar"></i>&nbsp; <%=
                                                    publicada.createdAt.toLocaleDateString() %></small>
                                            <br>
                                            <a id="a_nombre_leccion" href="/users/lesson?id=<%= publicada._id %>">
                                                <h5 class="card-title">
                                                    <%= publicada.title %>
                                                </h5>
                                            </a>
                                            <p class="card-text">
                                            <details>
                                                <summary>Descripción</summary>
                                                <div style="text-align: justify;">
                                                    <p>
                                                        <%= publicada.description %>
                                                    </p>
                                                </div>
                                            </details>
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <a class="btn btn-warning"
                                                href="/users/edit_lesson?id=<%= publicada._id %>"><i
                                                    class="fa fa-pencil"></i></a>
                                            <script>
                                                function alerta_published() {
                                                    res = confirm('¿Estás seguro que deseas eliminar la lección publicada?');
                                                    if (res == true) {
                                                        return true;
                                                    } else {
                                                        return false;
                                                    }
                                                }
                                            </script>
                                            <a href="/users/delete_lesson/<%= publicada._id %>"><button type="button"
                                                    class="btn btn-danger" onclick="return alerta_published()"><i
                                                        class="fa fa-trash"></i></button></a>
                                        </div>
                                    </div>
                                </div>


                                <% }); %>
                                    <% } else { %>

                                        <div align="center" style="padding-left: 490px;">
                                            <img src="https://images.vexels.com/media/users/3/153867/isolated/preview/cf9017f933fb7aa4c72f41cddd99612a-emoticon-de-trazo-coloreado-triste-by-vexels.png"
                                                width="200px" height="auto" alt="">
                                            <br><br>
                                            <p>Aún no tienes lecciones publicadas</p>
                                        </div>
                                        <% } %>

                    </div>


                </div>
                <div class="tab-pane fade" id="nav-drafts" role="tabpanel" aria-labelledby="nav-drafts-tab">

                    <br><br>
                    <div class="row">
                        <% if(borradores.length> 0) { %>
                            <% borradores.forEach(function(borrador) { %>

                                <div class="col-4">
                                    <div class="card text-white bg-secondary mb-3" style="max-width: 246rem;">
                                        <div class="card-header">
                                            <div
                                                style="float: right; color: black; background: rgb(255, 255, 255); border-radius: 10%;">
                                                &nbsp;Borrador&nbsp;</div>
                                        </div>
                                        <a href="/users/lesson?id=<%= borrador._id %>"><img class="card-img-top"
                                                src="<%= borrador.image %>" alt="Card image cap"></a>
                                        <div class="card-body text-dark">
                                            <small style="float: right;"><i class="fa fa-calendar"></i>&nbsp; <%=
                                                    borrador.createdAt.toLocaleDateString() %></small>
                                            <br>
                                            <a id="a_nombre_leccion" href="/users/lesson?id=<%= borrador._id %>">
                                                <h5 class="card-title">
                                                    <%= borrador.title %>
                                                </h5>
                                            </a>
                                            <p class="card-text">
                                            <details>
                                                <summary>Descripción</summary>
                                                <div style="text-align: justify;">
                                                    <p>
                                                        <%= borrador.description %>
                                                    </p>
                                                </div>
                                            </details>
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <a class="btn btn-warning"
                                                href="/users/edit_lesson?id=<%= borrador._id %>"><i
                                                    class="fa fa-pencil"></i></a>
                                            <script>
                                                function alerta_draft() {
                                                    res = confirm('¿Estás seguro que deseas eliminar la lección en borrador?');
                                                    if (res == true) {
                                                        return true;
                                                    } else {
                                                        return false;
                                                    }
                                                }
                                            </script>
                                            <a href="/users/delete_lesson/<%= borrador._id %>"><button type="button"
                                                    class="btn btn-danger" onclick="return alerta_draft()"><i
                                                        class="fa fa-trash"></i></button></a>
                                        </div>
                                    </div>
                                </div>


                                <% }); %>
                                    <% } else { %>

                                        <div align="center" style="padding-left: 490px;">
                                            <img src="https://images.vexels.com/media/users/3/153867/isolated/preview/cf9017f933fb7aa4c72f41cddd99612a-emoticon-de-trazo-coloreado-triste-by-vexels.png"
                                                width="200px" height="auto" alt="">
                                            <br><br>
                                            <p>Aún no tienes lecciones en borrador</p>
                                        </div>
                                        <% } %>
                    </div>

                </div>
            </div>
        </section>


        <% include ../partials/footerUser %>
            <% include ../partials/scriptsUser %>