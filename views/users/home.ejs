<% include ../partials/headUser %>
  <% include ../partials/navbarUser %>

    <section>
      <h1>Bienvenido(a) <%= usuario.username %>
      </h1>
      <hr>
      <%- include('../partials/mensajesUser'); %>
        <br><br>
        <h3><i class="material-icons" style="font-size: 30px;">language</i> Idiomas disponibles</h3>
        <br>
        <div align="center">

          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 800px;">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="aqui va el name"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="../images/idiomas3.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                  <h5 class="h5_carrousel">Aprende distintos idiomas!!!</h5>
                  <p>Conoce los idiomas disponibles y aprende con las publicaciones.</p>
                </div>
              </div>

              <div class="carousel-item">
                <img class="d-block w-100" src="" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                  <a href="#">
                    <h1 class="h5_carrousel texto_sombra"><i class="fa fa-tag"></i>&nbsp;
                    </h1>
                  </a>
                  <p>...</p>
                </div>
              </div>



            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        </div>

    </section>

    <section>
      <h1><i class="material-icons" style="font-size: 40px;">auto_stories</i> Posts publicados</h1>
      <hr>

      <div class="container-fluid">
        <div class="row">

          <% if(publicaciones.length> 0) { %>
            <% publicaciones.forEach(function(publicacion) { %>
              <div class="col-12 mt-3">
                <div class="card">
                  <div class="card-horizontal">
                    <div class="img-square-wrapper">
                      <a href="/users/publication?id=<%= publicacion._id %>"><img class=""
                          src="<%= publicacion.image %>" width="400px" height="auto" alt="Card image cap"></a>
                    </div>
                    <div class="card-body">
                      <small style="float: right;"><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%=
                          publicacion.createdAt.toLocaleDateString() %></small>
                      <p><i class="fa fa-user"></i>&nbsp;&nbsp;<%= publicacion.username %>
                      </p>
                      <br>
                      <h4 class="card-title">
                        <%= publicacion.name %>
                      </h4>
                      <br>
                      <details>
                        <summary>Descripción</summary>
                        <div style="text-align: justify;">
                          <p>
                            <%= publicacion.description %>
                          </p>
                        </div>
                      </details>
                      <p class="card-text"></p>

                    </div>
                  </div>
                  <div class="card-footer">
                    <a href=""></a>
                    <a href="/users/publication?id=<%= publicacion._id %>" class="btn btn-primary">Ver publicación</a>
                  </div>
                </div>
              </div>
              <% }); %>
                <% } %>

        </div>
      </div>

    </section>

    <% include ../partials/footerUser %>
      <% include ../partials/scriptsUser %>