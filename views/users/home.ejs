<% include ../partials/headUser %>
  <% include ../partials/navbarUser %>

    <section>
      <h1>Bienvenido(a) <%= usuario.username %>
      </h1>
      <hr>
      <%- include('../partials/mensajesUser'); %>
        <br><br>
        <h3><i class="material-icons" style="font-size: 30px;">language</i> Idiomas disponibles</h3>
        <br>
        <div align="center">

          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width: 800px;">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <% if(idiomas.length> 0) { %>
                <% idiomas.forEach(function(idioma) { %>
                  <li data-target="#carouselExampleIndicators" data-slide-to="<%= idioma.name %>"></li>
                  <% }); %>
                    <% } %>

            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="../images/idiomas3.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                  <h5 class="h5_carrousel">Aprende distintos idiomas!!!</h5>
                  <p>Conoce los idiomas disponibles y aprende con las clases.</p>
                </div>
              </div>

              <% if(idiomas.length> 0) { %>
                <% idiomas.forEach(function(idioma) { %>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="<%= idioma.image %>" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                      <a href="/users/category?name=<%= idioma.name %>">
                        <h1 class="h5_carrousel texto_sombra"><i class="fa fa-tag"></i>&nbsp; <%= idioma.name %>
                        </h1>
                      </a>
                      <p>...</p>
                    </div>
                  </div>
                  <% }); %>
                    <% } %>



            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        </div>

    </section>

    <section>
      <h1><i class="material-icons" style="font-size: 40px;">auto_stories</i> Clases disponibles</h1>
      <hr>

      <div class="container-fluid">
        <div class="row">

          <% if(clases.length> 0) { %>
            <% clases.forEach(function(clase) { %>
              <div class="col-12 mt-3">
                <div class="card">
                  <div class="card-horizontal">
                    <div class="img-square-wrapper">
                      <a href="/users/class?id=<%= clase._id %>"><img class="" src="<%= clase.image %>" width="400px"
                          height="auto" alt="Card image cap"></a>
                    </div>
                    <div class="card-body">
                      <small style="float: right;"><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%=
                          clase.createdAt.toLocaleDateString() %></small>
                      <p><i class="fa fa-user"></i>&nbsp;&nbsp;<%= clase.username %>
                      </p>
                      <br>
                      <h4 class="card-title">
                        <%= clase.name %>
                      </h4>
                      <br>
                      <details>
                        <summary>Descripci√≥n</summary>
                        <div style="text-align: justify;">
                          <p>
                            <%= clase.description %>
                          </p>
                        </div>
                      </details>
                      <p class="card-text"></p>

                    </div>
                  </div>
                  <div class="card-footer">
                    <a href=""></a>
                    <a href="/users/class?id=<%= clase._id %>" class="btn btn-primary">Ver clase</a>
                  </div>
                </div>
              </div>
              <% }); %>
                <% } %>

        </div>
      </div>

    </section>

    <% include ../partials/footerUser %>
      <% include ../partials/scriptsUser %>